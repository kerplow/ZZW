function refreshOptionForm(innerHTML) {
    const newoptionForm = $('#new-option-form-<%= @list.id %>');
    newoptionForm.replaceWith(innerHTML);
};

function addOption(optionHTML) {
    $('#new-option-form-<%= @list.id %>').remove()
    $('#list-options-<%= @list.id %> ').append(optionHTML);
    $('#new-option-button-<%= @list.id %>').show()
};

<% if @option.errors.any? %>
  refreshOptionForm('<%= j render partial: "options/form", locals: {list: @list, option: @option} %>');
<% else %>
  addOption('<%= j render partial: "options/option", locals: {option: @option, container: true} %>');
<% end %>
