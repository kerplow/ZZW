<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 offset-sm-1">
      <div class="row">
        <% @lists.each do |list| %>
          <%= render partial: 'list', list: list, class: 'col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
