function refreshForm(innerHTML) {
    const newlistForm = $('.new_list');
    newlistForm.replaceWith(innerHTML);
};

function addlist(listHTML) {
    $('#list-form').remove()
    $('.lists').append(listHTML);
    $('#new-list-button').show()
};

<% if @list.errors.any? %>
  refreshForm('<%= j render partial: "lists/form", locals: { container: true, list: @list} %>');
<% else %>
  addlist('<%= j render partial: "lists/list", locals: { container: true, list: @list} %>');
<% end %>
