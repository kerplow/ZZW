<% poll = list.poll.nil? ? @poll : list.poll %>
<div id="list-<%= list.id %>" class="list col-sm-12 col-md-6 col-lg-4 col-xl-3">
  <h3 class="text-center list-title"><%= list.title %></h3>
  <p><%= list.description %></p>
  <div class="poll-toggle">
    <%= simple_form_for poll, method: :patch, remote: true, authenticity_token: true do |f| %>
      <%= f.input :list, input_html: { value: list.id, checked: !poll.archived }, wrapper_html: { hidden: true } %>
      <%= f.input :active, label: "poll?", as: :boolean, input_html: { onclick: '$(this).parents(".simple_form").submit()' } %>
    <% end %>
  </div>
  <div class="list-items">
    <%= link_to("+", new_list_option_path(list), remote: true, class: "new-option-button", id: "new-option-button-#{list.id}") %>
    <div class="list-options" id="list-options-<%= list.id%>">
      <%= render list.options  %>
    </div>
  </div>
  <%= list if Rails.env.development? %>
</div>
