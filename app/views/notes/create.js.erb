function refreshForm(innerHTML) {
    const newNoteForm = $('.new-note');
    newNoteForm.replaceWith(innerHTML);
};

function addNote(noteHTML) {
    $('#new-note').remove()
    $('#notes').append(noteHTML);
    $('#new-note-button').show()
};

<% if @note.errors.any? %>
  refreshForm('<%= j render partial: "notes/form", locals: { container: true, note: @note} %>');
<% else %>
  addNote('<%= j render partial: "notes/note", locals: { container: true, note: @note} %>');
<% end %>
